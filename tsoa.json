{
  "entryFile": "./src/back/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/back/controllers/*.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  },
  "routes": {
    "routesDir": "src/back",
    "authenticationModule": "src/back/authentication.ts"
  },
  "ignore": ["**/node_modules/**", "**/admin/**", "**/admin/**", "src/admin"]
}
